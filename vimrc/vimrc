scriptencoding utf-8
set encoding=utf-8

set number
set tabstop=4 shiftwidth=4 expandtab
set guifont=Bitstream\ Vera\ Sans\ Mono\ 8

set cursorline

filetype plugin on

syntax enable

if has ('gui_running')
    set guioptions-=r  " no scrollbar on the right
    set guioptions-=l  " no scrollbar on the left
    set guioptions-=m  " no menu
    set guioptions-=T  " no toolbar
endif

if $COLORTERM == 'gnome-terminal' || $COLORTERM == 'xterm' || $COLORTERM == 'Terminal'
    set t_Co=256
endif
colorscheme mustang

"source ~/.vim/plugin/imaps.vim

map <F2> :NERDTreeToggle<CR>

set hlsearch
set list listchars=trail:·,precedes:«,extends:»,tab:▸\  

" trying to make vim work properly in macos
set nocompatible
set backspace=indent,eol,start

autocmd FileType make set noexpandtab

map <Leader>b :MiniBufExplorer<cr>

" syntax hightlight configurations:
au BufRead,BufNewFile *.sql_diff set filetype=sql

let Tlist_Ctags_Cmd = "/usr/bin/ctags"
let Tlist_WinWidth = 50
map <F4> :TlistToggle<cr>

" autoload pathogen
call pathogen#infect()
" syntastic options
let g:syntastic_check_on_open=1

" clear trailing withespaces
command CT %s/\ \+$/

" highligh 120th column
set cc=120
hi ColorColumn ctermbg=black

" mouse on console
set mouse=a
